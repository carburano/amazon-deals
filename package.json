{
  "name": "amazon-lightning",
  "version": "1.0.0",
  "description": "Powered by node, hapi, joi, hapi-swaggered, hapi-swaggered-ui and swagger-ui",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "nodemon": "nodemon server.js --ignore 'node_modules/*' --ignore 'src/web/public/**' --ignore 'src/web/src/**'",
    "postinstall": "npm run-script dist",
    "js:build": "browserify -t [ babelify --presets [ react babel-preset-es2015 ] ] src/web/src/main.js -o src/web/public/js/main.js",
    "js:watch": "watchify -d -t [ babelify --presets [ react babel-preset-es2015 ] ] src/web/src/main.js -o src/web/public/js/main.js",
    "sass:build": "node-sass --include-path './node_modules' src/web/styles/main.scss src/web/public/styles/main.css",
    "sass:watch": "node-sass -w --source-map-embed --source-map-root 'src/web/styles' --include-path './node_modules' src/web/styles/main.scss src/web/public/styles/main.css",
    "dist": "parallelshell 'npm run-script js:build' 'npm run-script sass:build'",
    "watch": "parallelshell 'npm run-script js:watch' 'npm run-script sass:watch'",
    "dev": "parallelshell 'npm run-script js:watch' 'npm run-script sass:watch' 'npm run-script nodemon'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "z0mt3c",
  "license": "MIT",
  "dependencies": {
    "async": "^1.5.0",
    "babel": "^6.3.13",
    "babel-core": "^6.3.21",
    "babel-eslint": "^5.0.0-beta6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "bcrypt": "^0.8.5",
    "boom": "^3.0.0",
    "browserify": "^12.0.1",
    "chart.js": "^1.0.2",
    "cron": "^1.1.0",
    "good": "^6.4.0",
    "good-console": "^5.2.0",
    "h2o2": "^5.0.0",
    "hapi": "^11.1.2",
    "hapi-auth-bearer-token": "^4.0.0",
    "hapi-mongodb-profiles": "^2.0.1",
    "hapi-swaggered": "^2.4.1",
    "hapi-swaggered-ui": "^2.1.1",
    "history": "1.13.x",
    "hoek": "^3.0.4",
    "inert": "^3.2.0",
    "isomorphic-fetch": "^2.2.0",
    "joi": "^7.0.1",
    "lodash": "^3.10.1",
    "material-ui": "0.14.0",
    "materialize-css": "^0.97.5",
    "moment": "^2.10.6",
    "moment-timezone": "^0.4.1",
    "mongodb": "^2.1.0",
    "newrelic": "^1.24.1",
    "node-sass": "^3.4.2",
    "node-telegram-bot-api": "^0.17.0",
    "parallelshell": "^2.0.0",
    "qs": "^6.0.1",
    "react": "^0.14.3",
    "react-chartjs": "^0.6.0",
    "react-dom": "^0.14.3",
    "react-lazy-load": "2.0.0",
    "react-redux": "^4.0.1",
    "react-router": "^1.0.2",
    "react-tap-event-plugin": "^0.2.1",
    "redux": "^3.0.5",
    "redux-logger": "^2.3.1",
    "redux-simple-router": "^1.0.1",
    "redux-thunk": "^1.0.2",
    "superagent": "^1.6.1",
    "vision": "^4.0.1",
    "watchify": "^3.6.1",
    "wreck": "^7.0.0",
    "x-result-count": "^1.0.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "redux-devtools": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://z0mt3c@github.com/z0mt3c/amazon-deals.git"
  },
  "keywords": [
    "amazon",
    "lightning",
    "deals"
  ],
  "bugs": {
    "url": "https://github.com/z0mt3c/amazon-deals/issues"
  },
  "homepage": "https://github.com/z0mt3c/amazon-deals#readme"
}
